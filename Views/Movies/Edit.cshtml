                <input asp-for="ImdbRating" class="form-control" />
                <span asp-validation-for="ImdbRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreOfMovie" class="control-label"></label>
                <input asp-for="GenreOfMovie" class="form-control" />
                <span asp-validation-for="GenreOfMovie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionOfMovie" class="control-label"></label>
                <input asp-for="DescriptionOfMovie" class="form-control" />
